---
import TextTransClip from '~/components/common/TextTransClip';
let currentYear = new Date().getFullYear() % 100;
---
<section class="sc-about__hero">
    <div class="about__hero">
        <div class="container">
            <h2 class="upper about__hero-title grid">
                <span class="heading h1 fw-bold about__hero-title-txt">
                    <TextTransClip client:visible={{ rootMargin: "100% 0% 100% 0%" }}>Valentin </TextTransClip>
                </span>
                <span class="heading h1 cl-txt-orange fw-bold about__hero-title-txt">
                    <TextTransClip client:visible={{ rootMargin: "100% 0% 100% 0%" }}>Chavel<span class="heading h3 fw-semi cl-txt-title ver-align-top"> Â®</span></TextTransClip>
                </span>
                <span class="heading h3 fw-semi upper about__hero-year">
                    <span class="cl-txt-disable">
                        <TextTransClip client:visible={{ rootMargin: "100% 0% 100% 0%" }}>93</TextTransClip>
                    </span>
                    <span class="cl-txt-title">
                        <TextTransClip client:visible={{ rootMargin: "100% 0% 100% 0%" }}>{currentYear}</TextTransClip>
                    </span>
                </spa>
            </h2>
        </div>
    </div>
</section>

<style lang="scss">
    .sc-about__hero {}
    .about__hero {
        padding-top: 30rem;

        height: 300vh;
        &-title {
            margin-bottom: 16rem;
            position: relative;
            // gap: 1rem 0;
            &-txt {
                line-height: .835em;
                &:nth-child(1) {
                    grid-column: 1/16;
                    grid-row: 1/2;
                    margin-left: 1.8rem;
                }
                &:nth-child(2) {
                    grid-column: 4/12;
                }
            }
            &-year {
                grid-column: 13/16;
                display: flex;
                flex-direction: column;
            }
        }
    }
</style>