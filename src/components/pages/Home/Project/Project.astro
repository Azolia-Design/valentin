---
import TextTransClip from '~/components/common/TextTransClip';
import ProjectListing from './ProjectListing';
import Arrows from "~/components/common/Arrows.astro";
import { findImage } from '~/utils/images';
import Image from '~/components/common/Image.astro';

let currentYear = new Date().getFullYear() % 100;

const projects = [
    {
        link: "/project/defichain",
        year: 2020,
        title: "Definchain",
        roles: ["Product Design"],
        services: ["Website Design", "Mobile Application"],
        selling_points: ["Up 200% Conversion Rate", "3.233.222 Downloaded"],
        desc: "DefiMetachain is the ERC-20 blockchain solution of Defichain. As part of this product, I worked on the blockchain explorer.",
        thumbnail: {
            src: '~/assets/images/define-hero.jpg',
            alt: 'Definchain thumbnail'
        }
    },
    {
        link: "/project/vietcombank",
        year: 2018,
        title: "Vietcom<br/>bank",
        roles: ["Design system", "Mobile app design", "Graphic Design"],
        services: ["Website Design",  "Graphic Design"],
        selling_points: ["Increase User Engagement by 150%", "5,000,000+ Active Users"],
        desc: "Vietcombank is one of the fastest growing global bank. Part of it is due to it's strong design thinking process.",
        thumbnail: {
            src: '~/assets/images/define-hero-2.jpg',
            alt: 'vietcombank thumbnail'
        },
    },
    {
        link: "/project/bidv",
        year: 2021,
        title: "BIDV",
        roles: ["Brand Identity", "UX Research", "Web Design"],
        services: ["Branding", "User Experience Research"],
        selling_points: ["Brand Recognition Boost by 120%", "Awarded Best Banking Website 2020"],
        desc: "BIDV's rebranding and UX improvements have significantly enhanced customer satisfaction and brand loyalty.",
        thumbnail: {
            src: '~/assets/images/define-hero-3.jpg',
            alt: 'BIDV thumbnail'
        }
    }
]
---
<div class="home__project-wrap">
    <section class="home__project">
        <div class="container">
            <h2 class="upper fix-font home__project-title grid">
                <span class="heading h2 fw-bold home__project-title-txt">Projects I</span>
                <span class="heading h2 fw-bold home__project-title-txt">worked on</span>
                <span class="heading h2 fw-bold cl-txt-disable home__project-title-txt">16-{currentYear}<span class="heading h3 fw-semi ver-align-top cl-txt-orange"> Â®</span></span>
                <span class="fs-20 cl-txt-desc fw-reg upper home__project-title-label">(Portfolio)</span>
            </h2>
            <div class="home__project-main">
                <div class="home__project-main-stick">
                    <ProjectListing data={projects} client:only="solid-js">
                        <Fragment slot='thumbnails'>
                            <div class='home__project-thumbnail-listing grid-1-1'>
                                {projects.map(({ thumbnail, link }) => (
                                    <a href={link} class="home__project-thumbnail-img" data-cursor-text="View">
                                        <div class="home__project-thumbnail-img-wrap">
                                            <div class="home__project-thumbnail-img-inner">
                                                <Image
                                                    src={thumbnail.src}
                                                    widths={[400, 768, 1024, 2040]}
                                                    width={692}
                                                    height={903}
                                                    alt={thumbnail.alt}
                                                    layout="cover"
                                                    decoding="async"
                                                    loading="lazy"
                                                    class="img img-fill"
                                                />
                                            </div>
                                        </div>
                                    </a>
                                ))}
                            </div>
                        </Fragment>
                        <Fragment slot='slides'>
                            {projects.map(({ thumbnail }) => (
                                <div class='home__project-slide-item-wrap'>
                                    <div class="home__project-slide-item">
                                        <div class="home__project-slide-item-progress">
                                            <div class="home__project-slide-item-progress-inner"></div>
                                        </div>
                                        <div class="home__project-slide-item-img">
                                            <Image
                                                src={thumbnail.src}
                                                widths={[400, 768, 1024]}
                                                width={692}
                                                height={903}
                                                alt={thumbnail.alt}
                                                layout="cover"
                                                decoding="async"
                                                loading="lazy"
                                                class="img img-fill"
                                            />
                                        </div>
                                    </div>
                                </div>
                            ))}
                        </Fragment>
                        <Arrows slot="arrows" />
                    </ProjectListing>
                </div>
            </div>
        </div>
    </section>
</div>
<style lang="scss" is:global>
    @use '~/assets/styles/mixins' as *;
    .home__project-wrap {
        position: relative;
        @include md {
            height: 600vh;
            z-index: 5;
        }
        @include sm {
            height: auto;
        }
    }
    .home__project {
        position: relative;
        z-index: 3;
        background-color: var(--cl-dm-bg);
        padding-block: 16rem;
        @include md {
            padding-top: calc(8rem + 3vh);
            padding-bottom: 5vh;

            position: sticky;
            top: 0;
            height: 100svh;
        }
        @include sm {
            padding-block: 0 4rem;
            position: relative;
            height: auto;
        }
        > .container {
            @include md {
                height: 100%;
                display: flex;
                flex-direction: column;
            }
        }
        &-title {
            margin-bottom: 16rem;
            position: relative;
            // gap: 1rem 0;
            @include md {
                margin-bottom: 8rem;
            }
            &-label {
                grid-column: 14/16;
                grid-row: 1/3;
                justify-self: end;
                @include md {
                    @include text(16);
                    grid-column: 11/13;
                }
                @include sm {
                    grid-column: 1/5;
                    grid-row: 1/2;
                    justify-self: start;
                }
            }
            &-txt {
                line-height: .835em;
                @include md {
                    @include text(dis2);
                    line-height: 0.835em;
                }
                @include sm {
                    @include text(h2);
                    grid-column: 1/-1 !important;
                }
                &:nth-child(1) {
                    grid-column: 1/16;
                    grid-row: 1/2;
                    margin-left: 1.8rem;
                    @include md {
                        grid-column: 1/11;
                        margin-left: 1rem;
                    }
                    @include sm {
                        grid-row: 2/3;
                        margin-left: 0;
                    }
                }
                &:nth-child(2) {
                    grid-column: 5/16;
                    @include md {
                        grid-column: 5/13;
                    }
                    @include sm {
                        grid-row: 3/4;
                    }
                }
                &:nth-child(3) {
                    grid-column: 5/16;
                    @include md {
                        grid-column: 5/13;
                    }
                    @include sm {
                        grid-row: 4/5;
                    }
                }
            }
        }
        &-main {
            position: relative;
            height: 500vh;
            @include md {
                height: auto;
                flex: 1;
            }
            &-stick {
                position: sticky;
                top: 0;
                height: 100vh;
                @include md {
                    position: relative;
                    height: 100%;
                }
            }
        }
        &-listing {
            padding-bottom: 4.5rem;
            height: 100%;
            padding: 14rem 0 4vh;
            @include md {
                padding: 0;
                grid-template-rows: 1fr auto;
                row-gap: 4rem;
            }
            @include sm {
                row-gap: 2.4rem;
            }
        }
        &-name {
            grid-column: 1/4;
            grid-row: 2/3;
            align-self: end;
            @include md {
                grid-column: 1/3;
                grid-row: 1/2;
                align-self: stretch;

                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }
            @include sm {
                grid-column: 1/-1;
            }
            &-txt {
                --max-height: calc(3.2rem * 1.1 * 2);

                display: -webkit-box;
                -webkit-box-orient: vertical;
                text-overflow: ellipsis;
                overflow: hidden;
                -webkit-line-clamp: 2;
                max-height: var(--max-height);

                @include md {
                    --max-height: calc(2.4rem * 1.2 * 2);

                    @include text(h4);
                }
                // opacity: 0;
                // clip-path: polygon(0 0, 100% 0, 100% var(--max-height), 0 var(--max-height));
            }
        }
        &-pagination {
            padding-block: 2rem;
            margin-bottom: 4rem;

            border-bottom: .1rem solid var(--cl-dm-border);
            display: flex;
            align-items: center;
            gap: 0 1rem;
            line-height: .9em;
            @include md {
                padding-block: 0 2rem;
                margin-bottom: 3rem;
            }
            @include sm {
                @include text(16);
                line-height: 1em;
                gap: 0 .6rem;
            }
        }
        &-slide {
            display: flex;
            flex-direction: column;
            margin: -1rem 0;
            grid-column: 1/3;
            @include md {
                display: none;
            }
            &-item {
                position: relative;
                @include size(100%);

                display: flex;
                justify-content: center;
                align-items: center;
                &-wrap {
                    height: .2rem;
                    overflow: hidden;

                    transition: height .5s linear;
                    padding: 1rem 0;
                    cursor: pointer;
                    width: 6.6rem;
                    &.active {
                        height: 11.4rem;
                        // transition-delay: 0s;
                        .home__project-slide-item-progress {
                            // opacity: 1;
                            transition: opacity .4s linear;
                        }
                        .home__project-slide-item-progress-inner {
                            // opacity: 1;
                            transition: opacity .4s linear;
                        }
                        .home__project-slide-item-img {
                            // clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
                            // transition-delay: 0s;
                        }
                    }
                }
                &-img {
                    position: absolute;
                    z-index: 3;
                    width: 100%;
                    height: 100%;
                    overflow: hidden;
                    img {
                        height: 100%;
                        object-fit: cover;
                    }
                }
                &-progress {
                    z-index: 2;
                    position: absolute;
                    inset: 0;
                    border: .2rem solid transparent;
                    background: #fff border-box;
                    -webkit-mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
                    mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
                    mask-composite: exclude;
                    opacity: .1;
                    transition: opacity .4s linear;
                    &-inner {
                        position: absolute;
                        z-index: 3;
                        // inset: -.15rem;
                        // border: .2rem solid transparent;
                        @include size(150%);
                        // top: 50%;
                        // left: 50%;
                        // transform: translate(-50%, -50%);
                        background: linear-gradient(45deg, rgba(255, 61, 0, 0), rgba(255, 61, 0, 1)) border-box;
                        // -webkit-mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
                        // mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
                        // mask-composite: exclude;
                        // opacity: 0;
                        // transition: opacity 1s cubic-bezier(0.16, 1, 0.3, 1) .3s;
                    }
                }
            }
        }
        &-thumbnail {
            grid-column: 5/12;
            grid-row: 1/3;
            height: 100%;

            position: relative;
            overflow: hidden;
            @include md {
                grid-column: 5/13;
                grid-row: 1/2;
            }
            @include sm {
                grid-column: 1/3;
                grid-row: 2/3;
                aspect-ratio: .7;
            }
            &-wrap {
                height: 100%;
                width: 100%;
            }
            &-listing {
                height: 100%;
            }
            &-img {
                --clipIn: 100%;
                --clipOut: 100%;
                --imgTrans: 0%;
                --imgDirection: -1;
                --imgScale: 1;

                flex: none;
                position: relative;
                @include size(100%);
                clip-path: polygon(var(--clipIn) var(--clipIn), var(--clipOut) var(--clipIn), var(--clipOut) var(--clipOut), var(--clipIn) var(--clipOut));
                &-wrap {
                    transform-origin: 25% 25%;
                    transform: scale(var(--imgScale));
                    @include size(100%);
                }
                &-inner {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    @include size(100%);
                }

                img {
                    object-fit: cover;
                    position: absolute;
                    transform: translate(calc(var(--imgTrans) / (2 * var(--imgDirection))), calc(var(--imgTrans) / (2 * var(--imgDirection))));
                }
            }
            &-blur {
                position: absolute;
                bottom: 0;
                right: 0;
                z-index: 2;
                pointer-events: none;
            }
        }
        &-sub-info {
            grid-column: 13/16;
            @include md {
                grid-column: 1/5;
                // align-self: end;
            }
            @include sm {
                grid-column: 3/-1;
                grid-row: 2/3;

                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }
        }
        &-desc {
            grid-column: 13/17;
            align-self: end;
            @include md {
                grid-column: 5/11;
                align-self: start;
            }
            @include sm {
                grid-column: 1/5;
            }
            &-txt {
                @include md {
                    @include text(18);
                }
                @include sm {
                    @include text(16);
                }
            }
        }
        &-link {
            display: flex;
            align-items: center;
            column-gap: .6rem;

            margin-top: 14vh;
            margin-bottom: 2.4vh;
            @include md {
                margin-top: 5.8rem;
                margin-bottom: 0;
            }
            @include sm {
                margin-top: 3.8rem;
                .fs-20 {
                    @include text(16);
                }
            }
        }
        &-role {
            &-listing {
                display: flex;
                flex-direction: column;
                row-gap: 1.2rem;
                p {
                    @include md {
                        @include text(18);
                    }
                    @include sm {
                        @include text(16);
                    }
                }
            }
        }
        &-year {
            margin-bottom: 9.5vh;
            &.mod-tablet {
                display: none;
                @include md {
                    display: block;
                }
            }
            @include md {
                display: none;
                margin-bottom: 0;
            }
            @include sm {
                display: block;
            }
            &-txt {
                line-height: .9em;
                @include sm {
                    @include text(16);
                    line-height: 0.9em;
                }
            }
        }
        &-label {
            margin-bottom: 1rem;
            @include md {
                @include text(16);
            }
        }
        &-navigation {
            display: flex;
            align-items: center;
            gap: 0 .5rem;

            grid-column: 3/-1;
            grid-row: 1/2;
            align-self: start;
            justify-self: end;
            margin: -.6rem;

            display: none;
            @include sm {
                display: flex;
            }
            &-arrow {
                padding: .6rem;
                &.disable {
                    pointer-events: none;
                    @include tColor(disable, dm);
                }
            }
        }
    }
</style>