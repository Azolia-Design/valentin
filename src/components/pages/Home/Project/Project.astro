---
<div class="home__project-wrap">
    <section class="home__project">
        <div class="container">
            <h2 class="upper fix-font home__project-title grid">
                <span class="heading h2 fw-bold home__project-title-txt">
                    <TextTransClip client:visible={{ rootMargin: "100% 0% 100% 0%" }}>Projects I</TextTransClip>
                </span>
                <span class="heading h2 fw-bold home__project-title-txt">
                    <TextTransClip client:visible={{ rootMargin: "100% 0% 100% 0%" }}>worked on</TextTransClip>
                </span>
                <span class="heading h2 fw-bold cl-txt-disable home__project-title-txt">
                    <TextTransClip client:visible={{ rootMargin: "100% 0% 100% 0%" }}>16-{currentYear}<span class="heading h3 fw-semi ver-align-top cl-txt-orange"> Â®</span></TextTransClip>
                </span>
                <span class="fs-20 cl-txt-desc fw-reg upper home__project-title-label">(Portfolio)</span>
            </h2>
            <div class="home__project-main">
                <div class="home__project-main-stick">
                    <ProjectListing data={projects} client:visible={{ rootMargin: "100% 0% 100% 0%" }}>
                        <Image
                            src={'~/assets/images/project-blur-thumb.png'}
                            widths={[400, 768, 1024]}
                            width={692}
                            height={903}
                            alt={'orange blur'}
                            layout="cover"
                            loading="lazy"
                            decoding="async"
                            slot="blur"
                            class="home__project-thumbnail-blur"
                        />
                        <Arrows slot="arrows" />
                    </ProjectListing>
                </div>
            </div>
        </div>
    </section>
</div>
<style lang="scss" is:global>
    @use '~/assets/styles/mixins' as *;
    .home__project {
        position: relative;
        z-index: 3;
        background-color: var(--cl-dm-bg);
        padding-block: 16rem;
        &-title {

            margin-bottom: 16rem;
            position: relative;
            // gap: 1rem 0;
            &-label {
                grid-column: 14/16;
                grid-row: 1/2;
                justify-self: end;
            }
            &-txt {
                line-height: .835em;
                &:nth-child(1) {
                    grid-column: 1/16;
                    grid-row: 1/2;
                    margin-left: 1.8rem;
                }
                &:nth-child(2) {
                    grid-column: 5/16;
                }
                &:nth-child(3) {
                    grid-column: 5/16;
                }
            }
        }
        &-main {
            position: relative;
            height: 400vh;
            &-stick {
                position: sticky;
                top: 0;
                height: 100vh;
            }
        }
        &-listing {
            padding-bottom: 4.5rem;
            height: 100%;
            padding: 14rem 0 4vh;
        }
        &-name {
            grid-column: 1/4;
            grid-row: 2/3;
            align-self: end;
            &-txt {
                --max-height: calc(3.2rem * 1.1 * 2);

                display: -webkit-box;
                -webkit-box-orient: vertical;
                text-overflow: ellipsis;
                overflow: hidden;
                -webkit-line-clamp: 2;
                max-height: var(--max-height);
                // opacity: 0;
                // clip-path: polygon(0 0, 100% 0, 100% var(--max-height), 0 var(--max-height));
            }
        }
        &-pagination {
            padding-block: 2rem;
            margin-bottom: 4rem;

            border-bottom: .1rem solid var(--cl-dm-border);
            span:first-child {
                clip-path: polygon(0 0, 100% 0, 100% 1.4em, 0 1.4em);
            }
        }
        &-slide {
            display: flex;
            flex-direction: column;
            margin: -1rem 0;
            grid-column: 1/3;
            &-item {
                position: relative;
                @include size(100%);

                display: flex;
                justify-content: center;
                align-items: center;
                &-wrap {
                    height: .2rem;
                    overflow: hidden;

                    transition: height .5s linear;
                    padding: 1rem 0;
                    cursor: pointer;
                    width: 6.6rem;
                    &.active {
                        height: 11.4rem;
                        // transition-delay: 0s;
                        .home__project-slide-item-progress {
                            // opacity: 1;
                            transition: opacity .4s linear;
                        }
                        .home__project-slide-item-progress-inner {
                            // opacity: 1;
                            transition: opacity .4s linear;
                        }
                        .home__project-slide-item-img {
                            // clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
                            // transition-delay: 0s;
                        }
                    }
                }
                &-img {
                    position: absolute;
                    z-index: 3;
                    width: 80.48%;
                    height: 85.45%;
                    overflow: hidden;
                    img {
                        // height: 100%;
                        // object-fit: cover;
                    }
                    // clip-path: polygon(50% 50%, 50% 50%, 50% 50%, 50% 50%);
                    // transition: clip-path .4s linear;
                    // img {
                    //     width: 100%;
                    //     height: 100%;
                    //     object-fit: cover;
                    // }
                }
                &-progress {
                    z-index: 2;
                    position: absolute;
                    inset: 0;
                    border: .2rem solid transparent;
                    background: #fff border-box;
                    -webkit-mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
                    mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
                    mask-composite: exclude;
                    opacity: .1;
                    transition: opacity .4s linear;
                    &-inner {
                        position: absolute;
                        z-index: 3;
                        // inset: -.15rem;
                        // border: .2rem solid transparent;
                        @include size(150%);
                        // top: 50%;
                        // left: 50%;
                        // transform: translate(-50%, -50%);
                        background: linear-gradient(45deg, rgba(255, 61, 0, 0), rgba(255, 61, 0, 1)) border-box;
                        // -webkit-mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
                        // mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
                        // mask-composite: exclude;
                        // opacity: 0;
                        // transition: opacity 1s cubic-bezier(0.16, 1, 0.3, 1) .3s;
                    }
                }
            }
        }
        &-thumbnail {
            grid-column: 5/12;
            grid-row: 1/3;
            height: 100%;

            position: relative;
            overflow: hidden;
            &-wrap {
                height: 100%;
                width: 100%;
                >  * {
                    height: 100%;
                }
                // .swiper-container {
                // }
                // .swiper-slide {
                //     grid-area: 1/1/2/2;
                //     transform: none !important;
                // }
                // .swiper-wrapper {
                //     display: grid;
                // }
            }
            &-img {
                pointer-events: none;
                flex: none;
                position: relative;
                @include size(100%);
                // opacity: 0;

                display: flex;
                justify-content: center;
                align-items: center;
                position: relative;

                img {
                    object-fit: cover;
                    position: absolute;
                }
            }
            &-blur {
                position: absolute;
                bottom: 0;
                right: 0;
                z-index: 2;
                pointer-events: none;
            }
        }
        &-sub-info {
            grid-column: 13/16;
        }
        &-desc {
            grid-column: 13/17;
            align-self: end;
        }
        &-link {
            display: flex;
            align-items: center;
            column-gap: .6rem;

            margin-top: 14vh;
            margin-bottom: 2.4vh;
        }
        &-role {
            &-listing {
                display: flex;
                flex-direction: column;
                row-gap: 1.2rem;
            }
        }
        &-year {
            margin-bottom: 9.5vh;
        }
        &-label {
            margin-bottom: 1rem;
        }
    }
</style>