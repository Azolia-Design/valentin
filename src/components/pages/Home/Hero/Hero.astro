---
import { Icon } from 'astro-icon/components';
import { getImage } from 'astro:assets';
import Image from '~/components/common/Image.astro';
import Arrows from '~/components/common/Arrows.astro';
import HeroScript from './script';

import DeepMap from '~/assets/images/hero-real-deepmap.jpg';
import HeroMain from '~/assets/images/hero-real.jpg';
import TextTransClip from '~/components/common/TextTransClip';
import Background2D from './Background2D';

const DeepMapImg = await getImage({src: DeepMap, format: 'webp', width: DeepMap.width})
const HeroMainImg = await getImage({src: HeroMain, format: 'jpg', width: HeroMain.width})

const { data } = Astro.props;
---
<div class="home__hero-wrap">
    <section class="home__hero">
        <HeroScript client:visible={{ rootMargin: "100% 0% 100% 0%" }}/>
        <div class="home__hero-main">
            <div class="container grid calc-h">
                <div class="home__hero-scope-wrap">
                    <ul class="home__hero-scope">
                        {data.scopes.map((el) => <li>{el}</li>)}
                    </ul>
                    <a href="#" class="arrow-hover home__hero-scope-cta">
                        <span class="txt-link">How can I help?</span>
                        <Arrows class="ic-20"/>
                    </a>
                </div>
                <div class="home__hero-intro-wrap">
                    <p class="home__hero-intro">{data.subtitle}</p>
                    <span class="line"></span>
                    <div class="home__hero-awards">
                        <div class="ic home__hero-award">
                            <Icon name="red-dot" />
                        </div>
                        <div class="ic home__hero-award">
                            <Icon name="uxdesign" />
                        </div>
                        <div class="ic home__hero-award">
                            <Icon name="dfa" />
                        </div>
                    </div>
                </div>
                <div class="home__hero-title-wrap">
                    <div class="home__hero-greating-wrap">
                        <div class="home__hero-greating-inner">
                            <p class="home__hero-greating">Hi there! this is</p>
                            <p class="heading h5 home__hero-name"><span class="fw-med cl-txt-title">Valentine</span> <span class="cl-txt-desc">Cheval</span></p>
                        </div>
                    </div>
                    <h1 class="heading h1 fw-bold fix-font upper home__hero-title">
                        <span class="home__hero-title-txt">Design</span>
                        <span class="home__hero-title-txt">for financial</span>
                        <div class="cl-txt-orange home__hero-title-txt mod-slide"><span>Product</span><span>Business</span></div>
                        <!-- <span class="home__hero-title-txt">
                            <TextTransClip
                                triggerOpts={{
                                    trigger: '.home__hero-title',
                                    start: `bottom+=50% bottom-=20%`,
                                    end: 'bottom top+=20%',
                                }}
                                reverse={true}
                                client:visible={{ rootMargin: "100% 0% 100% 0%" }}>Design</TextTransClip>
                        </span> -->
                        <!-- <span class="home__hero-title-txt">
                            <TextTransClip
                                triggerOpts={{
                                    trigger: '.home__hero-title',
                                    start: `bottom+=50% bottom-=20%`,
                                    end: 'bottom top+=20%',
                                }}
                                reverse={true}
                            client:visible={{ rootMargin: "100% 0% 100% 0%" }}>for financial</TextTransClip>
                        </span> -->
                        <!-- <span class="home__hero-title-txt">
                            <TextTransClip
                                triggerOpts={{
                                    trigger: '.home__hero-title',
                                    start: `bottom+=50% bottom-=20%`,
                                    end: 'bottom top+=20%',
                                }}
                                reverse={true}
                            client:visible={{ rootMargin: "100% 0% 100% 0%" }}><div class="cl-txt-orange home__hero-title-txt mod-slide"><span>Product</span><span>Business</span></div></TextTransClip>
                        </span> -->
                    </h1>
                    <span class="upper home__hero-scrolldown">(Scroll down)</span>
                </div>
            </div>
        </div>
        <div class="home__hero-bg">
            <div class="home__hero-bg-main">
                <Background2D
                    original={HeroMainImg.src}
                    depth={DeepMapImg.src}
                    horizontalThreshold={150}
                    verticalThreshold={66.66}
                    client:visible={{ rootMargin: "100% 0% 100% 0%" }}/>
                <Image
                    class="img img-fill home__hero-bg-main-inner mod-mb"
                    src={HeroMainImg.src}
                    widths={[400, 768, 1024, 2040]}
                    width={1728}
                    height={1050}
                    alt={'a man'}
                    layout="cover"
                    loading="eager"
                    decoding="sync"
                />
                <div class="home__hero-gradient-mb"></div>
            </div>
        </div>
    </section>
</div>

<style lang="scss" is:global>
    @use '~/assets/styles/mixins' as *;
    .home__hero-wrap {
    }
    .home__hero {
        position: relative;
        background-color: var(--cl-dm-bg);

        display: grid;
        z-index: 3;
        &-main,
        &-bg {
            grid-area: 1/1/2/2;
        }
        &-main {
            position: relative;
            z-index: 2;
            margin-bottom: 200vh;

            @include size(100%, 100vh);
            @include sm {
                @include size(100%, 100svh);
                margin-bottom: 200svh;
            }
            & > .container {
                grid-template-rows: 1fr auto;
            }
        }
        &-bg {
            position: relative;
            contain: paint;
            z-index: 1;
            &-main {
                position: sticky;
                top: 0;
                width: 100%;
                height: 100vh;
                will-change: scale;
                @include sm {
                    height: 100svh;
                }
                img {
                    // transform-origin: 18vw 25vh;
                    transform-origin: center 16%;
                    object-position: center top !important;
                }
                &-inner {
                    position: absolute;
                    inset: 0;
                    transform-origin: center 16%;
                    @include size(100%);
                    @include sm {
                        display: none;
                    }
                    &.mod-mb {
                        display: none;
                        @include sm {
                            display: block;
                        }
                    }
                    // object-position: center top !important;
                }
            }
        }
        &-scope-wrap {
            grid-row: 1/2;
            grid-column: 13/17;
            align-self: center;

            margin-bottom: 10vh;
            @include md {
                margin-bottom: 5vh;
                grid-column: 8/13;
                align-self: end;
                grid-row: 3/4;
            }
            @include sm {
                grid-column: 1/-1;
                display: flex;
                column-gap: 1.2rem;
            }
        }
        &-scope {
            display: flex;
            flex-direction: column;
            gap: 1.6rem 0;

            padding-block: 3.2rem;
            margin-bottom: 3.2rem;

            border-block: 1px solid rgba(255, 255, 255, 0.10);
            @include md {
                flex-wrap: wrap;
                flex-direction: row;
                gap: 2rem;
            }
            @include sm {
                width: 4.4rem;
                height: 0;
                overflow: hidden;
                pointer-events: none;
                visibility: hidden;
                opacity: 0;
                padding: 0;
                margin: 0;
            }
            &-cta {
                display: flex;
                justify-content: space-between;
                align-items: center;

                @include tColor(title, dm);
                transition: color 0.4s ease-in-out;
                @include sm {
                    padding-top: 2.4rem;
                    border-top: 1px solid var(--cl-dm-border);
                    flex: 1;
                }
                &:hover {
                    @media (hover:hover) {
                        color: var(--cl-orange);
                    }
                }
            }
        }
        &-greating-wrap {
            margin-bottom: 3.4rem;
            @include sm {
                margin-bottom: .3rem;
            }
        }
        &-greating {
            line-height: 3.52rem;
            @include sm {
                line-height: 3.04rem;
            }
        }
        &-title-wrap {
            grid-row: 1/3;
            grid-column: 1/15;
            align-self: end;

            padding-bottom: 3.2rem;

            @include md {
                grid-row: 1/3;
                grid-column: 1/-1;
            }
            @include sm {
                grid-row: 1/2;
                padding-bottom: 5svh;
            }
        }
        &-title {
            @include tColor(title, dm);
            line-height: .835em;

            margin-bottom: 5rem;
            max-width: 135rem;
            @include md {
                @include text(dis1);
                line-height: 0.835em;
            }
            @include sm {
                @include text(h1);
                margin-bottom: 0rem;
            }
            &-txt {
                // display: inline-block;
                .trans-line-above {
                    display: none;
                }
                &.mod-slide {
                    position: relative;
                    display: grid;
                    overflow: hidden;
                    @keyframes slide-text {
                        0% { transform: translateY(100%); opacity: 0 }
                        50% { transform: translateY(0); opacity: 1 }
                        100% { transform: translateY(-100%); opacity: 0 }
                    }
                    span {
                        --anim-dur: 4s;
                        grid-area: 1/1/2/2;
                        // animation: slide-text var(--anim-dur) cubic-bezier(.74, .06, .4, .92) infinite;
                        &:nth-child(2) {
                            transform: translateY(100%);
                            // animation-delay: calc((var(--anim-dur)/2) * -1);
                        }
                    }
                }
            }
        }
        &-intro-wrap {
            grid-row: 2/3;
            grid-column: 13/17;
            align-self: end;

            display: flex;
            flex-direction: column;
            gap: 3.2rem 0;

            padding-bottom: 4.8rem;
            @include md {
                grid-column: 8/13;
                grid-row: 2/3;

                padding-bottom: 3.2rem;
                .line {
                    display: none;
                }
            }
            @include sm {
                grid-column: 1/-1;
                display: flex;
                flex-direction: row-reverse;
                column-gap: 1.2rem;
                padding-bottom: 2.4rem;
            }
        }
        &-intro {
            @include sm {
                @include text(14);
            }
        }
        &-awards {
            display: flex;
            align-items: center;
            gap: 0 2.5rem;
            @include md {
                display: none;
            }
            @include sm {
                display: grid;
                grid-template-columns: 1fr;
                @include size(4.4rem);
                flex: none;
            }
        }
        &-award {
            @keyframes fade {
                0% {
                    opacity: 0;
                    transform: scale(1.1);
                }
                33% {
                    opacity: 1;
                    transform: scale(1);
                }
                50% {
                    opacity: 0;
                    transform: scale(1.1);
                }
                100% {
                    opacity: 0;
                    transform: scale(1.1);
                }
            }
            @include size(4.4rem);
            opacity: .5;
            transition: opacity .4s cubic-bezier(.74, .06, .4, .92);
            &:hover {
                opacity: 1;
            }
            @include sm {
                opacity: 0;
                grid-area: 1/1/2/2;
                width: 100%;
                animation: fade 6s ease-in-out infinite;
                &:nth-child(1) {
                    animation-delay: 0s;
                }
                &:nth-child(2) {
                    animation-delay: 2s;
                }

                &:nth-child(3) {
                    animation-delay: 4s;
                }
            }
        }
        &-scrolldown {
            @include sm {
                display: none;
            }
        }
        &-gradient-mb {
            display: none;
            @include sm {
                display: block;
                position: absolute;
                bottom: 0;
                height: 43svh;
                width: 100%;
                z-index: 1;
                background: linear-gradient(180deg, rgb(0, 5, 15, 0) 0%, #00050f 70%);
            }
        }
    }
</style>