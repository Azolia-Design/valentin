<div class="project__transition">
    <div class="container calc-h">
        <div class="heading h3 fw-semi cl-txt-title upper" data-project-name></div>
        <div class="fw-med" data-project-info></div>
        <div class="fs-20 fw-med cl-txt-sub" data-project-year></div>
    </div>
</div>
<style lang="scss" is:global>
    @use '~/assets/styles/mixins' as *;
    .project__transition {
        position: absolute;
        width: 100%;
        height: 100vh;
        top: 0;
        left: 0;
        pointer-events: none;
        z-index: 5;
        overflow: hidden;
        display: grid;
        > * {
            grid-area: 1/1/2/2;
        }
        .container {
            display: contents;
            @include md {
                display: block;
            }
        }
        .project__thumbnail-img-inner {
            display: flex;
            justify-content: center;
            align-items: center;
            pointer-events: none;
            width: 100%;
            height: 100%;
            position: relative;
            img {
                position: absolute;
                object-position: top center;
            }
            @include md {
                mask-image: linear-gradient(transparent,#fff 0,#fff calc(100% - 15svh), transparent);
                -webkit-mask-image: linear-gradient(transparent,#fff 0,#fff calc(100% - 15svh), transparent);
            }
            &:before {
                content: '';
                position: absolute;
                z-index: 2;
                background: linear-gradient(22deg, #00050f 16.32%, rgb(0, 5, 15, 0) 50%);
                bottom: 0;
                height: 31svh;
                width: 100%;
                opacity: .8;

                display: none;
                @include md {
                    display: block;
                }
                @include sm {
                    height: 30rem;
                }
            }
        }
    }
    [data-project-name] {
        position: absolute;
        z-index: 3;
        transform-origin: top left;
        line-height: .835em;
        // width: calc(100% - var(--container-padding));
        // left: calc(var(--container-padding) * -1);
        // padding-inline: var(--container-padding);
        @include md {
            @include text(h1);
            line-height: .835em;
        }
        @include sm {
            @include text(h2);
            line-height: .835em;
            max-width: 30.12rem;
            overflow-wrap: anywhere;
        }
    }
    [data-project-info] {
        position: absolute;
        z-index: 3;

        display: flex;
        flex-direction: column;
        align-items: start;
        gap: 7.4rem 0;
        @include md {
            display: none;
        }
        .project__role,
        .project__services,
        .project__selling {
            @include tColor(desc, dm);

            &-listing {
                margin-top: 1rem;
                @include tColor(subtitle, dm);

                font-family: 'Helvetica Neue Reg', sans-serif;
                font-weight: 400;
                display: flex;
                flex-direction: column;
                align-items: start;
                align-self: start;
                grid-area: 1/1/2/2;
            }
        }
        .project-item-label {
            margin-bottom: 0 !important;
            // margin-bottom: 1rem;
        }
    }

    [data-project-year] {
        position: absolute;
        z-index: 3;
        display: flex;
        align-items: center;
        gap: 0 0.5rem;
        line-height: .9em;
        @include md {
            display: none;
        }
    }
</style>
