---
import { SEO } from "astro-seo";
// import "~/assets/styles/global.scss";
import BasicScript from '~/components/global/BasicScript.astro';
import 'src/assets/styles/libs/swiper.css';
import StylesGlobal from "./StylesGlobal.astro";

interface Props {
	title: string;
}
const site = "http://localhost:4321/"
const canonicalURL = new URL(Astro.url.pathname, site).toString();
const resolvedImageWithDomain = new URL(
	"images/opengraph.jpg",
	site
).toString();
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<SEO
			title={title}
			description="I'm a award winning product designer specialized in financial products. I working for Financial Products in Fintech, crypto 7 Web3."
			canonical={canonicalURL}
			twitter={{
				creator: "",
				site: "",
			}}
			openGraph={{
				basic: {
				url: canonicalURL,
				type: "website",
				title: 'Valentine Cheval Portfolio',
				image: resolvedImageWithDomain,
				},
				image: {
					alt: "Valentine Cheval Portfolio Homepage Screenshot",
				},
			}}
		/>
		<link rel="preload" href="/fonts/HelveticaNeue-Light.woff2" as="font" type="font/woff2" crossorigin>
		<link rel="preload" href="/fonts/HelveticaNeue-Roman.woff2" as="font" type="font/woff2" crossorigin>
		<link rel="preload" href="/fonts/HelveticaNeue-Medium.woff2" as="font" type="font/woff2" crossorigin>
		<link rel="preload" href="/fonts/MatterSQ-Light.woff2" as="font" type="font/woff2" crossorigin>
		<link rel="preload" href="/fonts/MatterSQ-Regular.woff2" as="font" type="font/woff2" crossorigin>
		<link rel="preload" href="/fonts/MatterSQ-Medium.woff2" as="font" type="font/woff2" crossorigin>
		<link rel="preload" href="/fonts/MatterSQ-Semi.woff2" as="font" type="font/woff2" crossorigin>
		<link rel="preload" href="/fonts/MatterSQ-Bold.woff2" as="font" type="font/woff2" crossorigin>
	</head>
	<body>
		<div class="wrapper">
			<StylesGlobal/>
			<slot />
		</div>
		<BasicScript />
		<style is:global>
			/* Improve Page speed */
			/* https://css-tricks.com/almanac/properties/c/content-visibility/ */
			img {
				content-visibility: auto;
			}
		</style>
	</body>
</html>

