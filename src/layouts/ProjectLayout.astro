---
import { headerData } from '~/navigation';

import Layout from '~/layouts/Layout.astro';
import Header from '~/components/global/Header/Header.astro';
import DebugArea from '~/components/common/DebugArea.astro';

import HeroTransition from '~/components/pages/Projects/Transition/Hero.astro';

const { metadata } = Astro.props;
---
<Layout title={metadata.title}>
    <DebugArea />
    <slot name="header">
        <Header { ...headerData }/>
    </slot>
    <HeroTransition/>
    <div class="transition-overlay"></div>
    <main id="swup" class="page transition-fade">
        <slot />
    </main>
    <div class="noise"></div>
</Layout>
